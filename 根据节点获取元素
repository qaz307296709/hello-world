<script>
    function my$(id){
      document.getElementById(id);
    }
    my$("btn").onclick=function(){
         var nodes=my$("dv").childNodes;
         for(var i=0;i<nodes.length;i++){
             if(nodes[i].nodeType==1&&nodes[i].nodeName=="SPAN"){
                 nodes[i].style.backgroundColor="hotpink";
             }
         }
    };
</script>
